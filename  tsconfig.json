{
    "compilerOptions": {
      "target": "ES2020",
      "lib": ["DOM", "ES2020"],
      "module": "ESNext",
      "moduleResolution": "bundler",
      "jsx": "react-jsx",
  
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
  
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"]
      },
  
      "types": ["vite/client"]  
    },
    "include": ["src", "vite-env.d.ts"], 
    "exclude": ["node_modules", "dist"]
  }
  